<?xml version="1.0" encoding="utf-8"?>
<com.gcappslab.bookipedia.Library.Browse.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:background="@drawable/genre_rectangle"
                                                      android:orientation="vertical">

    <ImageView
        android:id="@+id/imageGenre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvGenreName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/science_theme"/>

    <TextView
        android:id="@+id/tvGenreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView\nProga"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

</com.gcappslab.bookipedia.Library.Browse.SquareLayout>